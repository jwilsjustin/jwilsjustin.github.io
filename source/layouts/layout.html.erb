<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="<%= image_url("favicon.ico") %>" rel="shortcut icon" type="image/vnd.microsoft.icon" />
    <title><%= @title || "jwils.co" %></title>
    <link href="//fonts.googleapis.com/css?family=Gentium+Book+Basic:400,700,400italic" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "main" %>
  </head>
  <body class="font-serif antialiased bg-gray-50">
    <div class="relative min-h-screen py-6 overflow-hidden md:flex md:flex-col md:justify-center bg-gray-50 sm:py-12">
