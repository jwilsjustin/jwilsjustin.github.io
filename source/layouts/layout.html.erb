      <div class="absolute inset-0 bg-[url('/assets/images/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
      <div class="z-10 px-4 md:px-0">
        <%= yield %>
      </div>
      <%= partial "shared/footer_links" %>
    </div>
  </body>
</html>
