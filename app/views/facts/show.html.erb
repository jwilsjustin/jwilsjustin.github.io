<h1>Fact</h1>

<p>
  <b>Fact</b><br>
  <%= @fact.fact %>
</p>

<p>
  <b>Description</b><br>
  <%= @fact.description %>
</p>

<div class="form-actions">
  <%= link_to 'Back', facts_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_fact_path(@fact), :class => 'btn' %>
  <%= link_to 'Delete', fact_path(@fact), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
