<div class="span12">

<h1>Posts</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= link_to post.name, post_path(post) %></td>
        <td><%= post.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', post_path(post), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_post_path, :class => 'btn btn-primary' %>

</div>
